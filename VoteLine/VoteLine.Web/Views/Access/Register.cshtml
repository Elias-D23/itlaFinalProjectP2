@model UserVM;

@{

    Layout = null ;
}

<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">

                <div class="card-header">
                    <h2> Register </h2>
                </div>

                <div class="card-body">

                    <form asp-controller="Access" asp-action="Register" method="post">
                        <input class="form-control mb-3" type="email" placeholder="Email" required asp-for="Email">
                        <input class="form-control mb-3" type="text" placeholder="Full Name" required asp-for="FullName">
                        <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password">
                        <input class="form-control mb-3" type="password" placeholder="Confirm Password" required asp-for="ConfirmPassword">
                        <input class="form-control mb-3" type="number" placeholder="Identity Document." required asp-for="DNI">
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Create</button>
                        </div>
                    </form>

                    @if (ViewData["Message"] != null)

                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Message"]
                        </div>
                    }

                    <h6> Do you already have an account? <a asp-controller="Access" asp-action="Login"> Login </a> </h6>
                </div>

            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>